<div>
   <img class="logo" src="/images/Logo.png" alt="logo Chill & Pill" onerror="this.remove()">
   {{!-- <i class="fas fa-solid fa-id-badge fa-10x"></i> --}}
</div>

<div class="profile-container">
   <h1>Welcome Home {{#if user}}{{user.username}}{{/if}}!</h1>
   <img  class="profile-img" src="/images/bglanding.jpeg" alt="user image" onerror="this.remove()">
 <div class="user-det">
   <label><b> Your User Name</b></label>
    <input type="text" placeholder="{{user.username}}" value="{{user.username}}">
    
    <label><b> Your Email Address</b></label>
    <input type="email" value="{{user.email}}" required>
    <div>

   <h5>Your last orders:</h5>
     {{#each payments}}
     <div class="card payment">
            <h4>Day: {{this.createdAt}}</h4>
            <h4>Sent to: {{this.adress}}</h4>
            <h4>Phone: {{this.phoneNumber}}</h4>
            <h4>Total: {{this.quantity}} $</h4>
            <ul>
            {{#each this.products}}
            <p>{{this.name}}</p>
            {{/each}}
            </ul>
   </div>
        {{/each}}
        </div>
</div>
    <form action="/auth/logout" method="post" ><button class="signupbtn" type="submit" >Log Out</button></form>
   </div>