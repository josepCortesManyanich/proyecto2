<form id="singup-form" action="/auth/signup" method="post" style="border:1px solid #ccc">
<img class="logo" src="/images/Logo.png" alt="logo Chill & Pill">
  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    <label for="email"><b>Email</b></label>
    <input type="email" placeholder="Please Enter Your Email" name="email" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" required>

    <label for="psw-repeat"><b>Repeat Password</b></label>
    <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

    <label>
      <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
    </label>

    <p class="privacy">By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

    {{#if error}}
      <p style="color: red;">{{error}}</p>
      {{/if}}

    <div class="clearfix">
      <button type="button" class="singupbtn"><a>Create Account</a> </button> <br>
      <p>Already Have An Account?</p>

      <button class="cancelbtn"> <a href="/auth/login">Log In</a></button>
    </div>
  </div>
</form>