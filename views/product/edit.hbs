<h1>Editing: {{ title }}</h1>

<form method="POST" action="/products/edit/{{ _id }}">

  <label>Name</label>
  <input type="text" name="name" value="{{ name }}"/>
<br>
  <label for="category">Family</label>
    <select id="family" name="family">
      <option value="CBD Oils">CBD Oils</option>
      <option value="CBD Flowers">CBD Flowers</option>
    </select>
<br>
  <label>Price â‚¬/g</label>
    <input type="Number" name="price" value="{{ price }}"/>
<br>
  <label>Cbd %</label>
    <input type="Number" name="cbd" value="{{ cbd }}"/>
<br>
  <label>Image</label>
    <input type="text" name="image" value="{{ image }}"/>
<br>
  <label>Description</label>
    <input type="text" name="description" value="{{ description }}"/> 

<br> 
 {{#if error}}
    <p style="color: red;">{{ error }}</p>
  {{/if}}
  <button type="submit">Edit</button>

  <a href="/products/delete/{{this._id}}">Delete</a>

</form>
 